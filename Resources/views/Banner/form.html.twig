{% extends 'TecAytAdminBundle:Common:layout.html.twig' %}
{% set sideBar = 'banners' %}

{% block content %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <a href="{{ path('tec_ayt_admin_banner_list') }}" class="btn btn-link btn-xs pull-left">
                                <i class="fa fa-angle-left"></i> Back
                            </a>
                            <h3 class="box-title">
                                <b>New Banner</b>
                            </h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            {% form_theme form 'TecAytAdminBundle:Form:fields.html.twig' %}
                            {{ form(form) }}
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
{% endblock %}